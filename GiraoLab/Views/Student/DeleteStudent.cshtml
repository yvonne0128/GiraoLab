@model Student;
<h1>Delete Student</h1>

<form asp-action="DeleteStudent" asp-controller="Student" method="post">
    <div class=" ="form-group">
        <label asp-for="Id" hidden>Id</label>
        <input asp-for="Id" class="form-control" hidden />
    </div>

    <div class=" ="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>

    <div class=" ="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>

    <div class=" ="form-group">
        <label asp-for="GPA">GPA</label>
        <input asp-for="GPA" class="form-control" readonly />
    </div>

    <div class=" ="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
    </div>

    <div class=" ="form-group">
        <label asp-for="AdmissionDate">AdmissionDate</label>
        <input asp-for="AdmissionDate" class="form-control" readonly />
    </div>

    <div class=" ="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly/>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>


</form>

